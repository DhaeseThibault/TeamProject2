<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeamProject.Views.ChooseGamemode" xmlns:local1="clr-namespace:TeamProject.Models"
             NavigationPage.HasNavigationBar="False">

    <ScrollView>
        <StackLayout>
            <!--TOPBAR-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" HorizontalOptions="Start" Source="{local1:ImageResourceExtensions TeamProject.Images.Backbutton.png}" WidthRequest="35" HeightRequest="35" />
                <Label Grid.Column="1" Margin="60,0,87,0" Text="Gamemode" TextColor="#ffffff" FontSize="30" HorizontalTextAlignment="Center" FontAttributes="Bold"/>
            </Grid>

            <!--GAMEMODE PARKOUR-->
            <Frame BackgroundColor="#2C2C34" CornerRadius="7" Margin="0,32,0,0" Padding="0,0,0,0">
                <StackLayout Margin="16,16,16,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Text="Parkour" FontSize="30" TextColor="#ffffff" FontAttributes="Bold" />
                        <Image Grid.Column="1" Source="{local1:ImageResourceExtensions TeamProject.Images.Parkour.png}" Margin="0,0,64,0" HeightRequest="70" WidthRequest="70" HorizontalOptions="End"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Text="During the track you 
                           have to collect as many points as possible by driving as fast as you can to the illuminated gate. 3 
                           points for a green gate, 2 for an orange gate and 0 for a red gate."
                           FontSize="18" TextColor="#ffffff" MaxLines="6" FontAttributes="Bold" Opacity="0.6" Grid.Column="0" HorizontalTextAlignment="Start"/>
                        <Image Grid.Column="1" HorizontalOptions="Start" Source="{local1:ImageResourceExtensions TeamProject.Images.Furtherbutton.png}" WidthRequest="50" HeightRequest="50" VerticalOptions="End" Margin="8,0,0,0"/>
                    </Grid>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>